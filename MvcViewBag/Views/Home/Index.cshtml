@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">


    <h1>Class - 02: ViewBag</h1>

    <h4>@ViewBag.Message</h4>
    <h4><u>ViewBag data shown by ViewData</u>: @ViewData["Message"]</h4>
    <h4><u>Current Date & Time:</u> @ViewBag.CurrentDateTime</h4>

    <h2>Show object data direct from ViewBag</h2>
    <p>
        ID: @ViewBag.AliDetails.Id, Name: @ViewBag.AliDetails.EmpName, Address: @ViewBag.AliDetails.EmpAddress, , Date of Birth:
        @ViewBag.AliDetails.Dob.ToShortDateString()
    </p>

    <h2>Show object data using var</h2>

    @{ var emp = ViewBag.AliDetails;}

    <p>ID: @emp.Id, Name: @emp.EmpName, Address: @emp.EmpAddress, Date of Birth: @emp.Dob.ToShortDateString() </p>

    <h2>Vegetables name from array</h2>

    <ul>

        @{
            foreach (var veg in ViewBag.Vegetables)
            {
                <li>@veg</li>
            }
        }
    </ul>

    <h2>Countries name from list</h2>

    <ul>
        @{
            foreach (var country in ViewBag.Countries)
            {
                <li>@country</li>
            }
        }
    </ul>

</div>
